{
  "name": "nanbox",
  "version": "2.0.0",
  "description": "Encode hidden data within NaN IEEE 754 floats",
  "scripts": {
    "build": "babel src -d dist",
    "prepare": "npm run build",
    "lint": "eslint src",
    "release": "np",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "main": "./dist/index.js",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/philihp/nanbox.git"
  },
  "keywords": [
    "nan",
    "hidden",
    "payload"
  ],
  "author": "Philihp Busby <philihp@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/philihp/nanbox/issues"
  },
  "homepage": "https://github.com/philihp/nanbox#readme",
  "devDependencies": {
    "@babel/cli": "7.21.0",
    "@babel/core": "7.21.0",
    "@babel/preset-env": "7.20.2",
    "@philihp/eslint-config": "6.0.2",
    "eslint": "8.36.0",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "lint-staged": "13.2.0",
    "prettier": "2.8.4"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json}": [
      "eslint --fix"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "extends": [
      "@philihp"
    ],
    "rules": {
      "no-bitwise": "off"
    }
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "dist/"
    ]
  }
}
